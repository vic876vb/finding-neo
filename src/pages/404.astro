---
import HtmlLayout from "@/layouts/HtmlLayout.astro"
import MainLayout from "@/layouts/MainLayout.astro"
---

<HtmlLayout title="Oops - Page Not Found">
  <MainLayout>
    <div class="flex flex-col items-center justify-center h-screen text-center">
      <h1 class="mb-4 text-6xl font-bold">404 - Page Not Found</h1>
      <p class="mb-8 text-lg">Sorry, the page you are looking for does not exist.</p>
      <a href="/" class="hover:underline text-blue-500">Go back to Home</a>
    </div>
  </MainLayout>
</HtmlLayout>
